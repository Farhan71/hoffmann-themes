            <div class="HOF-17_usp-icon">
              <img src="${hof17.svg1()}"/>
            </div>
            <div class="HOF-17_usp-title">
              <div>${hof17.usp().uspTtl[0]}</div>
            </div>
          </div>
          <div class="HOF-17_usp-text--section">
            <div class="HOF-17_usp-text-show-more"><div class="show-more-txt">${hof17.usp().uspPrv[0]}</div><div class="show-more">mehr anzeigen</div></div>
            <div class="HOF-17_usp-text-full hide"><div class="details">${hof17.usp().uspTxt[0]}</div><div class="show-less">weniger anzeigen</div></div>
          </div>
        </div>
        <div class="HOF-17_usp" data-usp="2">
          <div class="HOF-17_usp-title--section">
            <div class="HOF-17_usp-icon">
              <img src="${hof17.svg2()}"/>
            </div>
            <div class="HOF-17_usp-title">
              <div>${hof17.usp().uspTtl[1]}</div>
            </div>
          </div>
          <div class="HOF-17_usp-text--section">
            <div class="HOF-17_usp-text-show-more"><div class="show-more-txt">${hof17.usp().uspPrv[1]}</div><div class="show-more">mehr anzeigen</div></div>
            <div class="HOF-17_usp-text-full hide"><div class="details">${hof17.usp().uspTxt[1]}</div><div class="show-less">weniger anzeigen</div></div>
          </div>
        </div>
        <div class="HOF-17_usp" data-usp="3">
          <div class="HOF-17_usp-title--section">
            <div class="HOF-17_usp-icon">
              <img src="${hof17.svg3()}"/>
            </div>
            <div class="HOF-17_usp-title">
              <div>${hof17.usp().uspTtl[2]}</div>
            </div>
          </div>
          <div class="HOF-17_usp-text--section">
            <div class="HOF-17_usp-text-show-more"><div class="show-more-txt">${hof17.usp().uspPrv[2]}</div><div class="show-more">mehr anzeigen</div></div>
            <div class="HOF-17_usp-text-full hide"><div class="details">${hof17.usp().uspTxt[2]}</div><div class="show-less">weniger anzeigen</div></div>
          </div>
        </div>
      </div>
    </div>`;

    if (!$('HOF-17_container')) insert($('.sidebar__content'), 'afterend', hof17container);
    hof17.listner();
  },
  usp: () => {
    const data = {
      uspTtl: ['Kochgeschirr für die Ewigkeit', 'Lebenslange Garantie auf den Guss', 'Nachhaltige Wiederbeschichtung'],
      uspPrv: ['Mit Hoffmann setzen Sie der Geldverschwendung ein...', 'Sie müssen sich nie wieder über einen gewölbten...', 'Sollten nach vielen Jahren der intensiven Nutzung die...'],
