    };

    return data;
  },
  svg1: () => 'https://assets.ablyft.com/60091050/YkVPnCCjKN1gJPQmiHXaYEeKXq89MKRQfpXJdjyQ.svg',
  svg2: () => 'https://assets.ablyft.com/60091050/ZnzewZQQBJlTCaIathZRrP0EOqUQLYovsmfkaliH.svg',
  svg3: () => 'https://assets.ablyft.com/60091050/KnwHuCHZj95XdRKnbRkS2hThievLa5etrGuNJdF9.svg',
  listner: () => {
    $('body').onclick = (e) => {
      if (e.target.closest('.show-more') || e.target.classList.contains('show-more')) {
        const parent = e.target.closest('.HOF-17_usp-text--section');
        parent.classList.add('expanded');
        $(parent, '.HOF-17_usp-text-show-more').classList.add('hide');
        $(parent, '.HOF-17_usp-text-full').classList.remove('hide');
      } else if (e.target.closest('.show-less') || e.target.classList.contains('show-less')) {
        const parent = e.target.closest('.HOF-17_usp-text--section');
        parent.classList.remove('expanded');
        setTimeout(() => {
          $(parent, '.HOF-17_usp-text-show-more').classList.remove('hide');
          $(parent, '.HOF-17_usp-text-full').classList.add('hide');
        }, 450);
      }
    };
  },
};
(function pollForhof17() {
  if ($('[role="complementary"] .sidebar__content')) {
    try {
      hof17.mainJS();
      $('body').classList.add('HOF-17');
    } catch (error) {
      console.log(error);
    }
  } else {
    setTimeout(pollForhof17, 25);
  }
}());
</script>