{% layout none -%}
{%- assign formatted_initial_value=gift_card.initial_value | money_without_trailing_zeros: gift_card.currency -%}
{%- assign formatted_initial_value_stripped=formatted_initial_value | strip_html -%}
<!DOCTYPE html>
<html>
  <head></head>
  <body>
    <div class="gift-card">
      <img src="{{section.settings.gutscheindesign | img_url: 'master'}}">
      <h1>{{ gift_card.balance | money }}</h1>
      <h2>{{ gift_card.code | format_code }}</h2>
    </div>
    <a href="#" class="gift-card-download" onclick="window.print();">JETZT AUSDRUCKEN</a>
  </body>
</html>
<style>
  .gift-card{max-width: 595px; width: 100%; position: relative; margin: auto;}.gift-card img{width: 100%; margin: auto; display: block;}.gift-card h1{position: absolute; top:{{section.settings.werttop}}%; color:{{section.settings.wertcolor}}; font-size:{{section.settings.wertsize}}px; left:{{section.settings.wertleft}}%; font-family:{{settings.text_font_custom}}; transform: rotate(90deg);}.gift-card h2{position: absolute; top:{{section.settings.codetop}}%; color:{{section.settings.codecolor}}; font-size:{{section.settings.codesize}}px; left:{{section.settings.codeleft}}%; transform: rotate(90deg); font-family:{{settings.text_font_custom}}!important;}.gift-card-download{padding: 9px 35px; color:{{section.settings.buttonfontcolor}}; background:{{section.settings.buttoncolor}}; margin: 18px auto 0px auto; display: block; max-width: 250px; font-family: {{settings.text_font_custom}}; font-size: 14px; text-align: center; line-height: 52px; text-decoration: none;}@media print{.gift-card-download{display:none;}
</style>
{% schema %}
{
  "name": {
    "de": "Gutschein"
  },
  "settings": [
    {
      "type": "header",
      "content": "Gutscheindesign",
      "info": "Lade Dein fertiges Gutscheindesign hoch"
    },
    {
      "type": "image_picker",
      "id": "gutscheindesign",
      "label": "Gutscheindesign"
    },
    {
      "type": "header",
      "content": "Einstellungen",
      "info": "Verschiebe die dynamischen Elemente"
    },
    {
      "type": "range",
      "id": "werttop",
      "label": "Wert Abstand oben",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 27
    },
    {
      "type": "range",
      "id": "wertleft",
      "label": "Wert Abstand links",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 27
    },
    {
      "type": "color",
      "id": "wertcolor",
      "label": "Wertfarbe",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "wertsize",
      "label": "Wertgröße",
      "default": "42"
    },
    {
      "type": "range",
      "id": "codetop",
      "label": "Code Abstand oben",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 27
    },
    {
      "type": "range",
      "id": "codeleft",
      "label": "Code Abstand links",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 27
    },
    {
      "type": "color",
      "id": "codecolor",
      "label": "Codefarbe",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "codesize",
      "label": "Codegröße",
      "default": "11"
    },
    {
      "type": "header",
      "content": "Einstellungen",
      "info": "Definiere die Farben des Buttons"
    },
    {
      "type": "color",
      "id": "buttoncolor",
      "label": "Hintergrundfarbe",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "buttonfontcolor",
      "label": "Schriftfarbe",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
