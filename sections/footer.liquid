        document.querySelector('.needsclick img').setAttribute("width", "17px");
        document.querySelector('.needsclick img').setAttribute("height", "17px");
        document.querySelector('.needsclick img').setAttribute("loading", "lazy");     
      },
    };
    function_1.init();
  }
});
</script>